# LangChain Vulnerability Classifier Configuration
# Copy this file to .env and fill in your values

# OpenRouter API Configuration (for LLM-based classification)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Optional: Specify which model to use
# Default: openrouter/auto (uses best available model)
# Options: openrouter/sherlock-think-alpha, anthropic/claude-3-haiku, openai/gpt-4-turbo
OPENROUTER_MODEL=openrouter/auto

# Optional: OpenAI API Key (if using OpenAI embeddings instead of local)
# OPENAI_API_KEY=sk-your-openai-key-here

# Classifier Configuration
CLASSIFIER_MODE=hybrid  # Options: pattern, hybrid, rag
ENABLE_RAG=true  # Set to false to use only pattern matching (faster, no API calls)
CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for pattern matches (0.0-1.0)

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=./Classifier/data/chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2  # Local, no API needed

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
